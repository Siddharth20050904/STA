generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Students {
  name       String
  email      String  @unique
  id         String  @id @default(uuid())
  type       Role
  password   String
  isVerified Boolean @default(false)
  appointments Appointments[]
}

model Teachers {
  name              String
  email             String   @unique
  id                String   @id @default(uuid())
  type              Role
  isVerified        Boolean  @default(false)
  department        String
  subjects          String[]
  verificationToken String
  appointments Appointments[]
}

model Admins {
  name       String
  email      String  @unique
  id         String  @id @default(uuid())
  type       Role
  password   String
  isVerified Boolean @default(false)
}

enum Role {
  STUDENT
  TEACHER
  ADMIN
}


model Appointments{
  id String @id @default(uuid())
  teacher Teachers @relation(fields: [teacherId], references: [id])
  student Students @relation(fields: [studentId], references: [id])
  teacherName String
  studentName String
  teacherId String
  studentId String
  subject String
  time DateTime
  approvalStatus ApprovalStatus @default(pending)
  status MeetingStatus @default(upcoming)
  message String @default("")
  createdAt DateTime
}

enum MeetingStatus {
  completed
  upcoming
  cancelled
}

enum ApprovalStatus {
  accepted
  rejected
  pending
}