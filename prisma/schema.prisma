generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Students {
  name       String
  email      String  @unique
  id         String  @id @default(uuid())
  type       Role
  password   String
  isVerified Boolean @default(false)
}

model Teachers {
  name              String
  email             String   @unique
  id                String   @id @default(uuid())
  type              Role
  isVerified        Boolean  @default(false)
  department        String
  subjects          String[]
  verificationToken String
}

model Admins {
  name       String
  email      String  @unique
  id         String  @id @default(uuid())
  type       Role
  password   String
  isVerified Boolean @default(false)
}

enum Role {
  STUDENT
  TEACHER
  ADMIN
}
